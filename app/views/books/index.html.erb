<h2class="current-category"><%= params[:category] %></h2>
<% if @books.count == 0 %>
  <h2>"There are currently no books in this category.""</h2>
<% else %>
  <% @books.each do |book| %>
    <a href="/books/<%= book.id %>">
      <%= image_tag book.book_img.url(:book_index) %>
    </a>
  <% end %>
<% end %>

<%= link_to"Add Book", new_book_path %>
